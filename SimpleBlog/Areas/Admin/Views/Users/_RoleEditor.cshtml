@model IList<SimpleBlog.Areas.Admin.ViewModels.RoleCheckbox>

<div class="panel panel-default">
    <div class="panel-heading">Roles</div>
    <div class="panel-body">
        <ul class="list-group">
            @for (int i = 0; i < Model.Count; i++)
            {
                var chk = Model[i].IsChecked ? "checked" : "";

                <li class="list-group-item">
                   @Html.Hidden("Roles[" + i + "].Id", Model[i].Id)
                    <label for="Roles_@(i)_IsChecked">
                        @Html.CheckBox("Roles[" + i + "].IsChecked", Model[i].IsChecked)
                        @Model[i].Name
                    </label>
                </li>
            }
        </ul>
    </div>
</div>

